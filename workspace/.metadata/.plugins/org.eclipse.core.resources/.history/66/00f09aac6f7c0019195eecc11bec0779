package com.atsistemas.curso.ejerciciosimpson.dto;

public class PersonajeDto {//DTO es lo que le voy a deovlver o a enviar como dato al servicio

	private String nombre;
	private String apellidos;
	private String padre;
//	private String madre;
//	private Collection<String> hijos;
	private int edad;
	
	public PersonajeDto(String nombre, String apellidos, String padre, int edad) {
		super();
		this.nombre = nombre;
		this.apellidos = apellidos;
		this.padre = padre;
		this.edad = edad;
	}

	public PersonajeDto() {
		super();
		// TODO Auto-generated constructor stub
	}

	public String getNombre() {
		return nombre;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}

	public String getApellidos() {
		return apellidos;
	}

	public void setApellidos(String apellidos) {
		this.apellidos = apellidos;
	}

	public String getPadre() {
		return padre;
	}

	public void setPadre(String padre) {
		this.padre = padre;
	}

	public int getEdad() {
		return edad;
	}

	public void setEdad(int edad) {
		this.edad = edad;
	}

}
